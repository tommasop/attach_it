<p id="notice"><%= notice %></p>

<h1>Listing Attached Files</h1>

<table>
  <thead>
    <tr>
      <th>Attacheable</th>
      <th>File data uid</th>
      <th>File data name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attached_files.each do |attached_file| %>
      <tr>
        <td><%= attached_file.attacheable %></td>
        <td><%= attached_file.file_data_uid %></td>
        <td><%= attached_file.file_data_name %></td>
        <td><%= link_to 'Show', attached_file %></td>
        <td><%= link_to 'Edit', edit_attached_file_path(attached_file) %></td>
        <td><%= link_to 'Destroy', attached_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

